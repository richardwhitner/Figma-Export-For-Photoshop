// tsconfig.json
{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "DOM"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./node_modules/@figma/plugin-typings"
    ],
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
}